Name: nethserver-phonebook-mysql
Version:	@@VERSION@@
Release:	@@RELEASE@@
Summary:	Libraries and templates for ODBC connection. Sogo phonebook exporter.

Group:		System Environment/Libraries	
License:	GPLv2
URL:		www.nethesis.it	
Source0:	%{name}-%{version}.tar.gz
BuildRoot:	%(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)

BuildRequires:  nehserver-devtools	
#Requires:	mdbtools-odbc, freetds, perl-DBD-ODBC, php-odbc, smeserver-openldap-servers-sql	
Requires:  nethserver-unixODBC
BuildArch:	noarch

%description
Libraries and templates for ODBC connection

%prep
%setup -q

%build
[ -x createlinks ] && ./createlinks
mkdir -p root/home/e-smith/phonebook
mkdir -p root/usr/share/phonebooks/scripts


%install
rm -rf $RPM_BUILD_ROOT
rm -f %{name}-%{version}-filelist

(cd root   ; /usr/bin/find . -depth -print | /bin/cpio -dump $RPM_BUILD_ROOT)

/sbin/e-smith/genfilelist --file /usr/share/phonebooks/phonebook 'attr(0755,root,root)' --file /usr/share/phonebooks/phonebook2ldap 'attr(0755,root,root)' --file /usr/share/phonebooks/sogo_export.php 'attr(0755,root,root)'  $RPM_BUILD_ROOT > %{name}-%{version}-%{release}-filelist

%clean
rm -rf $RPM_BUILD_ROOT

%post

%files -f %{name}-%{version}-%{release}-filelist



